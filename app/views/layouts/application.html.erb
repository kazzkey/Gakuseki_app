<!DOCTYPE html>
<html>
  <head>
    <title>GakusekiApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="flash">
      <% if notice %>
        <p class="bg-info">
          <%= notice %>
        </p>
      <% end %>
      <% if alert %>
        <p class="bg-warning">
          <%= alert %>
        </p>
      <% end %>
    </div>
    <div>
      <%= yield %>
    </div>
  </body>
</html>
