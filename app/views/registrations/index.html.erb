<h1>Registrations#index</h1>

<p>作成したい学年・組を選択してください</p>
<%= form_with(url: new_registration_path, method: :get, local: true) do |form| %>

  <%= form.collection_select(
        :grade_id, Grade.all, :id, :number,
        { prompt: "学年" }, class: "form-control",
        required: true
      ) %>

  <%= form.collection_select(
        :kumi_id, Kumi.all, :id, :number,
        { prompt: "組" }, class: "form-control",
        required: true
      ) %>

  <%= form.submit "決定" %>
<% end %>

<hr>

<p>現在作成されている生徒データ</p>
<% (1..3).each do |n| %>
  <div>
    <%= n %>年生：<%= @grade = @students.where(grade_id: n).length %>名
  </div>
<% end %>
